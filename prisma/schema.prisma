generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String?  @unique
  nickName  String?
  cityName  String? //도시이름
  latitude  Float? // 위도
  longitude Float? // 경도
  account   Account?
  memo      Memos[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id            Int      @id @default(autoincrement())
  user          User     @relation(fields: [userId], references: [id])
  password_hash String?
  refresh_token String?
  userId        Int      @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Feelings {
  id   Int     @id @default(autoincrement())
  name String  @unique
  memo Memos[]
}

model Memos {
  id          Int       @id @default(autoincrement())
  cityName    String
  temperature Float
  feelsLike   Float
  main        String
  description String
  icon        String
  date        String
  memo        String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  userId      Int?
  feelingId   Int?
  User        User?     @relation(fields: [userId], references: [id])
  Feeling     Feelings? @relation(fields: [feelingId], references: [id])

  @@unique([userId, date])
}
